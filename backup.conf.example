# List of directories to backup, separated by semi-colon
directories='/etc;/usr/local/etc'

# Tar options
enable_gzip='yes'
tar_options=''

# List of databases to backup, separated by semi-colon
databases='jira;confluence'

# Database dump options
db_backup_util='mysqldump'
db_username='username'
db_password='password'
db_dump_options='--single-transaction --max-allowed-packet=1G'

# Mail Notification options
# You need to install sendemail (sudo apt-get install sendemail)
enable_mail_notification=yes
mail_to='admin@example.org'
mail_from="noreply@$(hostname -f)"
mail_subject='Backup error'
mail_server='mail.example.org'

# Backup options
# backup_type may be local, nfs, cifs or ftp
backup_type='local'
backup_directory='/usr/backups/data'
backup_date=$(/bin/date +%Y-%m-%d-%H-%M)
backup_suffix='backup'
backup_rotation=7
backup_server='storage.example.org'
backup_server_username='username'
backup_server_password='password'
backup_logfile='/var/log/backup/backup.log'
backup_error='/tmp/backup_error.log'

# NFS options
nfs_target="/raid/data/backups/$(hostname -f)"
nfs_options='nfsvers=3,hard,intr'

# CIFS options
cifs_directory="$(hostname -f)"
cifs_options=''

# FTP options
ftp_directory="$(hostname -f)"

